@model IEnumerable<EmployeeDataAccess.employee>

<br /><br />

@using (Html.BeginForm("Index", "Home", FormMethod.Get))
{
    @Html.TextBox("searching")<input type="submit" value="search" />
}
<table class="table table-striped">
    <thead>
        <tr>
            <th>Emp Code</th>
            <th>Emp Name</th>
            <th>Date Of Birth</th>
            <th>Date Of Joining</th>
            <th>Department</th>
            <th>Report To</th>
            <th>Contact Number</th>
            <th>Resigned</th>
            <th>Resigned Date</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="5" style="color:red">
                    No Match
                </td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.emp_code</td>
                    <td>@item.emp_name</td>
                    <td>@item.date_of_birth</td>
                    <td>@item.date_of_joining</td>
                    <td>@item.department</td>
                    <td>@item.report_to</td>
                    <td>@item.contact_number</td>
                    <td>@item.resigned</td>
                    <td>@item.resigned_date</td>
                </tr>
            }
        }
    </tbody>
</table>